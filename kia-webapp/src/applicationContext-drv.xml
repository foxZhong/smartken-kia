<bean class="org.mybatis.spring.SqlSessionFactoryBean" id="sqlSessionFactory-drv">
       <property name="dataSource" ref="dataSource-drv"></property>
       <property name="configLocation" value="classpath:com/trusteach/drv/mapper/mybatis3-drv.xml"></property>
       
</bean>

 


 
	<bean id="txManager-drv" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource-drv"/>
	</bean>
	

	<tx:advice id="txAdvice-drv" transaction-manager="txManager-drv">
		<tx:attributes>
			<tx:method name="get*" read-only="true"/>
			<tx:method name="load*" read-only="true"/>
			<tx:method name="add*" propagation="REQUIRED" />
			<tx:method name="modify*" propagation="REQUIRED"/>
			<tx:method name="remove*" propagation="REQUIRED"/>			
		</tx:attributes>
	</tx:advice>

	<aop:config>
		<aop:pointcut expression="execution(* com.trusteach.drv.biz.impl.*.*(..))" id="drvMehtod"/>
		<aop:advisor advice-ref="txAdvice-drv" pointcut-ref="drvMehtod" />
		
	</aop:config>



 <bean id="drvMapper" class="org.mybatis.spring.mapper.MapperFactoryBean" abstract="true" >
     <property name="sqlSessionFactory" ref="sqlSessionFactory-drv" />
   </bean>

<bean id="weekReocrdMapper" parent="drvMapper">
    <property name="mapperInterface" value="com.trusteach.drv.mapper.booked.IWeekRecordMapper"></property>
</bean>

<bean id="limitMapper" parent="drvMapper" >
   <property name="mapperInterface" value="com.trusteach.drv.mapper.booked.ILimitMapper"></property>
</bean>

<bean id="dictMapper" parent="drvMapper">
  <property name="mapperInterface" value="com.trusteach.drv.mapper.sys.IDictMapper"></property>
</bean>

<bean id="departmentMapper" parent="drvMapper">
  <property name="mapperInterface" value="com.trusteach.drv.mapper.sys.IDepartmentMapper"></property>
</bean>


<bean id="drvBookedBiz" class="com.trusteach.drv.biz.impl.BookedBiz" >
 <property name="IWeekRecordMapper" ref="weekReocrdMapper"></property>
 <property name="iLimitMapper" ref="limitMapper"></property>
</bean>

<bean id="drvSysBiz" class="com.trusteach.drv.biz.impl.DrvSysBiz">
  <property name="iDictMapper" ref="dictMapper"></property>
  <property name="iDepartmentMapper" ref="departmentMapper"></property>
</bean>


<bean class="com.trusteach.drv.web.action.booked.WeekPbAction"
 id="com.trusteach.drv.web.action.booked.WeekPbAction"
>
  <property name="iSysBiz" ref="drvSysBiz"></property>
  <property name="iBookedBiz" ref="drvBookedBiz"></property>
</bean>


</beans>